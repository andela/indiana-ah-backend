{
  "name": "express-authorshaven",
  "version": "1.0.0",
  "description": "A Social platform for the creative at heart",
  "main": "index.js",
  "scripts": {
    "test": "NODE_ENV=test npm run migrate:refresh && cross-env NODE_ENV=test nyc mocha --require @babel/register --require @babel/polyfill ./server/tests/**/*.test.js --timeout 6000 --exit",
    "clean": "rm -rf build",
    "build": "babel ./server/src -d ../server/dist",
    "start": "NODE_ENV=production && NODE_ENV=production npm run migrate:refresh && NODE_ENV=production babel-node ./server/index.js",
    "dev": "nodemon bin/dev",
    "coverage": "nyc report --reporter=text-lcov --reporter=html | coveralls && nyc report --reporter=lcov",
    "migrate": "sequelize db:migrate",
    "clean:db": "sequelize db:migrate:undo:all",
    "migrate:refresh": "npm run clean:db && npm run migrate"
  },
  "engines": {
    "node": "10.x"
  },
  "author": "Andela Simulations Programme",
  "license": "MIT",
  "dependencies": {
    "@sendgrid/mail": "^6.3.1",
    "bcrypt": "^3.0.3",
    "body-parser": "^1.18.3",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "cloudinary": "^1.13.2",
    "cors": "^2.8.4",
    "cross-env": "^5.2.0",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.4.0",
    "mocha": "^5.2.0",
    "morgan": "^1.9.1",
    "multer": "^1.4.1",
    "multer-storage-cloudinary": "^2.2.1",
    "nyc": "^13.1.0",
    "pg": "^7.8.0",
    "pg-hstore": "^2.3.2",
    "sequelize": "^4.42.0",
    "sequelize-cli": "^5.4.0",
    "sequelize-test-helpers": "^1.0.7",
    "sequelize-slugify": "^0.6.1",
    "sinon": "^7.2.3",
    "supertest": "^3.4.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.2.2",
    "@babel/polyfill": "^7.2.5",
    "@babel/preset-env": "^7.3.1",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "coveralls": "^3.0.2",
    "eslint": "^5.12.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.15.0",
    "nodemon": "^1.18.9"
  }
}
