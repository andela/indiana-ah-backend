{
  "name": "express-authorshaven",
  "version": "1.0.0",
  "description": "A Social platform for the creative at heart",
  "main": "index.js",
  "scripts": {
    "test": "NODE_ENV=test npm run migrate:refresh && cross-env NODE_ENV=test nyc mocha --require @babel/register --require @babel/polyfill ./server/tests/**/*.test.js --timeout 10000  --exit && NODE_ENV=test npm run clean:db",
    "clean": "rm -rf build",
    "build": "babel ./server -d dist",
    "start": "NODE_ENV=production node ./dist/index.js",
    "dev": "NODE_ENV=development nodemon bin/dev",
    "coverage": "nyc report --reporter=text-lcov --reporter=html | coveralls && nyc report --reporter=lcov",
    "migrate": "sequelize db:migrate && sequelize db:seed:all",
    "clean:db": "sequelize db:migrate:undo:all",
    "migrate:refresh": "npm run clean:db && npm run migrate",
    "heroku-postbuild": "npm run build"
  },
  "engines": {
    "node": "10.x"
  },
  "author": "Andela Simulations Programme",
  "license": "MIT",
  "dependencies": {
    "@babel/polyfill": "^7.2.5",
    "@babel/register": "^7.0.0",
    "@babel/runtime": "^7.3.4",
    "@sendgrid/mail": "^6.3.1",
    "bcrypt": "^3.0.3",
    "body-parser": "^1.18.3",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "cloudinary": "^1.13.2",
    "cors": "^2.8.5",
    "cross-env": "^5.2.0",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "express-session": "^1.15.6",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.4.0",
    "mocha": "^5.2.0",
    "morgan": "^1.9.1",
    "multer": "^1.4.1",
    "multer-storage-cloudinary": "^2.2.1",
    "nyc": "^13.3.0",
    "passport": "^0.4.0",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^1.0.0",
    "passport-twitter": "^1.0.4",
    "pg": "^7.8.0",
    "pg-hstore": "^2.3.2",
    "pusher": "^2.2.0",
    "sequelize": "^4.42.0",
    "sequelize-cli": "^5.4.0",
    "sequelize-slugify": "^0.6.1",
    "sequelize-test-helpers": "^1.0.7",
    "sinon": "^7.2.3",
    "supertest": "^3.4.2",
    "swagger-ui-express": "^4.0.2",
    "uuid": "^3.3.2",
    "winston": "^3.2.1",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "@babel/plugin-transform-runtime": "^7.3.4",
    "coveralls": "^3.0.2",
    "eslint": "^5.12.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.15.0",
    "nock": "^10.0.6",
    "nodemon": "^1.18.9",
    "sinon-chai": "^3.3.0"
  }
}
